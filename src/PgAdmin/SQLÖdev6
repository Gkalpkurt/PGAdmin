1) rental_rate sütunundaki değerlerin ortalaması

SELECT AVG(rental_rate) AS ortalama_rental_rate, 'Rental Rate Ortalama' AS sorgu
FROM film;

2) İsmi 'C' harfi ile başlayan film sayısı

SELECT COUNT(*) AS c_ile_baslayan_film_sayisi, 'C ile Başlayan Filmler' AS sorgu
FROM film
WHERE title LIKE 'C%';

3) rental_rate = 0.99 olan filmlerden en uzun film süresi

SELECT MAX(length) AS en_uzun_film_suresi, '0.99 Rental Rate En Uzun Film' AS sorgu
FROM film
WHERE rental_rate = 0.99;

4) uzunluğu 150 dakikadan büyük filmlerdeki farklı replacement_cost sayısı

SELECT COUNT(DISTINCT replacement_cost) AS farkli_replacement_cost_sayisi, '150dk Üzeri Replacement Cost' AS sorgu
FROM film
WHERE length > 150;
